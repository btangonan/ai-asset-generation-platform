# Production Environment Configuration
# Copy this to .env.production and fill in your values

# Application
NODE_ENV=production
PORT=9090
LOG_LEVEL=info

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-project-id-here
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Storage
GCS_BUCKET=your-bucket-name-here
SIGNED_URL_EXPIRY_DAYS=7

# Pub/Sub (for async processing)
PUBSUB_TOPIC_IMAGES=image-processing
PUBSUB_SUBSCRIPTION_IMAGES=image-processing-sub

# Google Sheets (if using Sheets UI)
GOOGLE_SHEETS_API_KEY=your-sheets-api-key-here
GOOGLE_SHEETS_ID=your-sheet-id-here

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Rate Limiting & Security
MAX_ROWS_PER_BATCH=10
MAX_VARIANTS_PER_ROW=3
USER_COOLDOWN_MINUTES=10

# Cost Controls
RUN_MODE=live
DAILY_BUDGET_USD=100